@model IEnumerable<smul.mapa.final.core.Models.Registration>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Novo Cadastro</a>
</p>
<form asp-controller="Registrations/Index">
    <p>
        Segmento:<input type="text" name="SearchString" />
        <input type="submit" value="Buscar" />
    </p>
</form>
<div style="position:relative;float:right">

    <a asp-action="OnPostExport" id="baixar" class="btn btn-success">Exportar Excel</a>
</div>

<table class="table" id="content-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeInstituicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneFixo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneCelular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NomeRepresentante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrefeituraRegional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segmento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tematica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoDeAtucao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registro)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeInstituicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefoneFixo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefoneCelular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NomeRepresentante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrefeituraRegional)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Segmento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tematica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TempoDeAtucao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registro)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

